{
  "name": "prospectivity-heatmap",
  "build": { "dockerfile": "Dockerfile" },
  // let the CLI mount the repository automatically
  // "workspaceFolder": "/workspaces/prospectivity-heatmap",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10",
      "installTools": false
    },
    "ghcr.io/devcontainers-extra/features/uv:2": {}
  },
  "postCreateCommand": "uv sync --dev && uv run pre-commit install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.jupyter",
        "njpwerner.autodocstring",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  }
}
